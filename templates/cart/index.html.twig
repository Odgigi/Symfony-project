{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block content %}

    <h1>Mon panier</h1>
    Retrouvez ici les annonces que vous avez sélectionnées (mises en fétiches).
    {# {{ dump('cart') }} #}
    <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">Annonce</th>
            <th scope="col"></th>
            <th scope="col">Histoire</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Catégorie</th>
          </tr>
        </thead>
        <tbody>
            {% for annonce in cart %}
            <tr>
                <th>
                    <img src="/uploads/{{ annonce.annonce.img1 }}" alt="{{ annonce.annonce.titre }}" height="75px"><br>
                </th>
                <td>{{ annonce.annonce.titre }}<br>
                    <small>{{ annonce.annonce.type_article}}</small>
                </td>
                <td>{{ annonce.annonce.histoire }}</td>
                <td>{{ annonce.user.pseudo }}</td>
                <td>{{ annonce.annonce.categorie }}</td>
                <td>
                    <a href="">
                        <img src="{{ asset('assets/icons/delete.png') }}" height="18px" alt="icône supprimer"></td>
                    </a>
            </tr>
            {% endfor %}
        </tbody>
      </table>
{% endblock %}
